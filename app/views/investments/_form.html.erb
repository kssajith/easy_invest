<%= form_for investment, url: {action: "create"} do |f| %>
  <%= f.label :amount %>
  <%= f.text_field :amount, { required: true } %>
  <%= f.label :date_of_investing %>
  <%= f.date_field("date_of_investing", min: Date.parse('01-Apr-2015'), placeholder: "dd/mm/yyyy") %>
  <%= f.label :fund_id, "Scheme Name" %>
  <%= f.select :fund_id, options_from_collection_for_select(Fund.all, :id, :scheme_name), {}, { id: 'fund_id_select'} %>
  <%= f.submit "Create", class: 'submit_button' %>
<% end %>
